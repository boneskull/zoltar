<ng-include src="'header'" ng-controller="HeaderCtrl"></ng-include>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <ng-view></ng-view>
        </div>
    </div>
</div>
<ng-include src="'footer'"></ng-include>

<script type="text/ng-template" id="login">
    <form name="loginForm" class="form-horizontal" novalidate="novalidate"
          ng-submit="login()">
        <div class="modal-header"><h4>Login</h4></div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="username">Username:</label>

                <div class="controls">
                    <input type="text" tabindex="1" ng-required="true"
                           ng-model="credentials.username"
                           placeholder="username"
                           id="username"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="password">Password:</label>

                <div class="controls">
                    <input type="password" tabindex="2"
                           ng-required="true"
                           ng-model="credentials.password"
                           placeholder="password"
                           id="password"/>
                </div>
            </div>
            <div class="row-fluid" style="margin-top:20px; display: none;"
                 ng-show="failedLogin"
                 ng-animate="{show: 'fade-show', hide: 'fade-hide'}">
                <div class="span12">
                    <div class="alert alert-error">
                        Invalid username or password.
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">

            <div class="row-fluid">
                <div class="span6 text-left">
                    <a class="btn"
                       ng-click="forgot()">Forgot?
                    </a>
                </div>
                <div class="span6 text-right">
                    <ladda-button ladda="loginProgress" tabindex="3"
                                  class="btn"
                                  ng-class="{disabled: !credentials.username || !credentials.password}">
                        Login
                    </ladda-button>
                </div>
            </div>
        </div>
    </form>
</script>

<script type="text/ng-template" id="ladda">
    <button data-spinner-size="30" type="submit" class="btn ladda-button"
            style="overflow: visible;" data-style="zoom-in"><span
            class="ladda-label" ng-transclude></span></button>

</script>
</body>
</html>

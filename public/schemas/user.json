{
  "schema": {
    "username": {
      "type": "String",
      "require": true,
      "index": {
        "unique": true
      },
      "trim": true,
      "title": "Username"
    },
    "admin": {
      "type": "Boolean",
      "default": "false",
      "title": "Admin?"
    },
    "email": {
      "type": "String",
      "required": true,
      "index": {
        "unique": true
      },
      "trim": true,
      "title": "Email"
    },
    "createdon": {
      "type": "Date",
      "required": true,
      "default": "now"
    },
    "url": {
      "type": "String",
      "title": "URL"
    }
  },
  "metadata": {
    "hidden": [
      "createdon"
    ],
    "order": [
      "username",
      "email",
      "url",
      "admin"
    ],
     "lookup": {
      "key": "_id",
      "value": "username"
    }
  }
}
